# 生产环境安全配置文件
# 请根据需要修改并保存为 .env.production

# OpenRouter API密钥
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# 安全配置
ALLOWED_IPS=127.0.0.1,192.168.1.100,::1
SECRET_TOKEN=your-secret-token-here
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_HOUR=100

# 缓存配置（生产环境建议禁用调试模式）
CACHE_DIR=
# DEBUG_MODE=  # 留空表示禁用

# 服务配置
HOST=0.0.0.0
PORT=5000